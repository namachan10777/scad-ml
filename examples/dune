(alias
 (name examples)
 (deps
  (glob_files "*.exe")))

; Convenience rule/alias for building and running examples (output to things diectory)
; This pattern enables automatic scad re-generation on changes with `dune build -w @run`.

(rule
 (alias run)
 (deps
  ; (sandbox always)
  "runner_.exe"
  (:scads
   (glob_files "*[!_].exe")))
 ; (targets
 ;  (dir "things"))
 ; (mode
 ;  (promote (until-clean)))
 (action
  (chdir
   "things"
   (run ./../runner_.exe %{scads}))))
